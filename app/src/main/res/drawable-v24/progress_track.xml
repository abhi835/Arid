<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
       <shape android:shape="rectangle">
           <solid android:color="@color/white"/>
           <size android:height="@dimen/_40mdp"/>
           <corners android:radius="@dimen/_12mdp"/>
           <stroke android:color="#EEEDED"
               android:width="@dimen/_4mdp"/>

       </shape>
    </item>
<item>
<scale android:scaleWidth="100%">
    <selector>
        <item android:state_enabled="false"
            android:drawable="@android:color/transparent"/>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#30C1F9"/>
                <size android:height="@dimen/_40mdp"/>
                <corners android:bottomLeftRadius="@dimen/_12mdp"
                    android:bottomRightRadius="@dimen/_12mdp"
                    android:topRightRadius="@dimen/_12mdp"
                    android:topLeftRadius="@dimen/_12mdp"/>

                <stroke android:color="#B2E8FC"
                    android:width="@dimen/_2mdp"/>

            </shape>
        </item>
    </selector>
</scale>


</item>
</layer-list>