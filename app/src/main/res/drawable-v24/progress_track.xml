<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
       <shape android:shape="rectangle">
           <solid android:color="#DDDDDD"/>
           <size android:height="@dimen/_40mdp"/>
           <corners android:radius="@dimen/_4mdp"/>
           <stroke android:color="#E0E0E0"
               android:width="1dp"/>


       </shape>
    </item>
<item>
<scale android:scaleWidth="100%">
    <selector>
        <item android:state_enabled="false"
            android:drawable="@android:color/transparent"/>
        <item>
            <shape android:shape="rectangle">
                <solid android:color="#00acee"/>
                <size android:height="@dimen/_40mdp"/>
                <corners android:bottomLeftRadius="4dp"
                    android:topLeftRadius="@dimen/_4mdp"/>
                <stroke android:color="#00acee"
                    android:width="@dimen/_1mdp"/>

            </shape>
        </item>
    </selector>
</scale>


</item>
</layer-list>