<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearlayout"
android:backgroundTint="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.AddPostFragment">

    <EditText
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:padding="@dimen/_7mdp"
        android:layout_margin="@dimen/_7mdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/edittext_round_shape"
        android:hint="What's In Your Mind!!"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/_25mdp"/>

    <EditText
        android:id="@+id/option1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34mdp"
        android:layout_marginTop="@dimen/_20mdp"
        android:hint="Option1"
        android:textAlignment="center"
        android:background="@drawable/edittext_round_shape"
        android:textSize="@dimen/_15mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question" />

    <EditText
        android:id="@+id/option2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34mdp"
        android:layout_marginTop="@dimen/_20mdp"
        android:hint="Option2"
        android:textAlignment="center"
        android:textSize="@dimen/_15mdp"
        android:background="@drawable/edittext_round_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option1" />

    <EditText
        android:id="@+id/option3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34mdp"
        android:layout_marginTop="@dimen/_20mdp"
        android:hint="Option3"
        android:textAlignment="center"
        android:textSize="@dimen/_15mdp"
        android:background="@drawable/edittext_round_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option2" />

    <EditText
        android:id="@+id/option4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_34mdp"
        android:layout_marginTop="@dimen/_20mdp"
        android:hint="Option3"
        android:textAlignment="center"
        android:textSize="@dimen/_15mdp"
        android:background="@drawable/edittext_round_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/option3" />



    <Button
        android:id="@+id/post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#063C66"
        android:textStyle="bold"
        android:text="Post"
        android:layout_marginTop="@dimen/_40mdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/option4" />

</androidx.constraintlayout.widget.ConstraintLayout>